<div class="max-w-xs w-full min-w-full lg:max-w-full flex mb-4">
  <div class="w-1/3 border border-r-0 border-gray-400 bg-white rounded-l p-4 flex flex-col justify-between leading-normal">
    <%= link_to recipe.name, recipe_path(recipe.id), class: "text-gray-900 font-bold text-xl mb-2" %>
    <%= button_to "Delete", recipe_path(recipe.id), method: :delete, class: "flex bg-transparent hover:bg-red-500 text-red-700 justify-center text-sm font-semibold hover:text-white p-1 w-20 border border-red-500 hover:border-transparent rounded"%>
  </div>
  <div class="w-2/3 border border-l-0 border-gray-400 bg-white rounded-r p-4 flex flex-col justify-between leading-normal">
    <% if recipe.public %>
      <p class="text-sm text-gray-600 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="fill-current text-gray-500 w-3 h-3 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
        </svg>
        Public
      </p>
    <% else %>
      <p class="text-sm text-gray-600 flex items-center">
        <svg class="fill-current text-gray-500 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M4 8V6a6 6 0 1 1 12 0v2h1a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-8c0-1.1.9-2 2-2h1zm5 6.73V17h2v-2.27a2 2 0 1 0-2 0zM7 6v2h6V6a3 3 0 0 0-6 0z" />
        </svg>
        Private
      </p>
    <% end %>
    <p class="text-gray-700 text-base"><%= recipe.description %></p>
  </div>
</div>
