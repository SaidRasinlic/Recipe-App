<div class="w-full">
  <header class="flex flex-wrap justify-between items-baseline gap-7">
    <h1 class="font-bold text-4xl">
      <%= @inventory.name %>
    </h1>
    <%=
      link_to "Add food", inventory_foods_new_path(@inventory.id),
      class: "text-sm px-4 py-2 leading-none bg-transparent hover:bg-teal-500 text-teal-700 justify-center font-semibold hover:text-white border border-teal-500 hover:border-transparent rounded"
    %>
  </header>
  <div class="mt-6 relative md:overflow-hidden overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm rounded text-center">
      <thead class="text-white">
        <tr class="bg-teal-700">
          <th class="px-4 py-2">Food</th>
          <th class="px-4 py-2">Quantity</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% @inventory.inventory_foods.each do |item| %>
          <tr>
            <td class="border px-4 py-2">
              <%= item.food.name %>
            </td>
            <td class="border px-4 py-2">
              <%= "#{item.quantity} #{item.food.measurement_unit}" %>
            </td>
            <td class="border px-4 py-2">
              <%=
                button_to "Delete", inventory_food_path(@inventory.id, item.id), method: :delete,
                class: "text-sm px-4 py-2 leading-none bg-transparent hover:bg-red-500 text-red-700 justify-center font-semibold hover:text-white border border-red-500 hover:border-transparent rounded"
              %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
